{
  "extends": ["@hasparus/tslint-config"],
  "rules": {
    "max-func-body-length": false, // duplicate of no-big-function
    "no-submodule-imports": [
      true,
      "date-fns",
      "fp-ts",
      "react-dom",
      "antd",
      "io-ts-types",
      "io-ts"
    ],
    "prefer-template": false,
    "no-nested-template-literals": false,
    "no-namespace": false
  }
}
