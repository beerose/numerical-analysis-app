{
  "extends": ["tslint:latest", "tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "no-console": false,
    "prefer-template": true,
    "align": [true, "parameters", "statements", "members", "elements"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-snake-case",
      "allow-leading-underscore"
    ],
    "prefer-array-literal": false,
    "ter-arrow-parens": [true, "as-needed"],
    "semicolon": [true, "always", "strict-bound-class-methods"],
    "ban": [true, "eval", { "name": "$", "message": "please don't" }],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "no-string-literal": false,
    "object-literal-sort-keys": [true, "shorthand-first"],
    "no-unused-expression": [true, "allow-tagged-template"],
    "no-submodule-imports": false,
    "no-object-literal-type-assertion": false,
    "max-classes-per-file": false,
    "import-name": false,
    "quotemark": [true, "single", "avoid-escape", "jsx-double"],
    "jsx-no-multiline-js": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "always"
        },
        "esSpecCompliant": true
      }
    ],
    "interface-name": [true, "never-prefix"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-first",
        "grouped-imports": true
      }
    ],
    "no-implicit-dependencies": false,
    "member-access": false,
    "interface-over-type-literal": false,
    "indent": [true, "spaces", 2],
    "jsx-no-lambda": true,
    "jsx-no-bind": true,
    "jsx-alignment": true,
    "jsx-boolean-value": [true, "never"],
    "member-ordering": [
      true,
      {
        "order": [
          "private-constructor",
          "public-constructor",
          "private-static-field",
          "public-static-field",
          "private-instance-field",
          "public-instance-field",
          "private-instance-method",
          "protected-instance-method",
          "public-instance-method"
        ]
      }
    ]
  }
}
