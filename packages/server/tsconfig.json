{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "lib": ["es2017"],
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./types"
    ],
    "outDir": "../../dist/server",
    "downlevelIteration": false,
    "noUnusedLocals": false
  },
  "include": ["src", "scripts"],
  "exclude": ["**/__tests__/*.ts"],
  "references": [{ "path": "../common" }]
}
